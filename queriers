INCIDENT

create table public.INCIDENT(incident_id char(7) CHECK(incident_id LIKE 'IN_____') PRIMARY KEY , incident_date date , incident_time time , incident_place varchar(20))

INSERT INTO public.incident
(incident_id, incident_date, incident_time, incident_place)
