ACCUSED

create table ACCUSED(adhar numeric(15) PRIMARY KEY , accused_name varchar(20),accused_gender char(1) check(accused_gender='M' OR accused_gender='F') , accused_alias varchar(10) ,accused_status varchar(10) 
 check(accused_status ='Bailed' OR accused_status ='Released' OR accused_status ='Arrested' OR accused_status ='Escaped'), accused_identification varchar(100) ,accused_age varchar(3) check(accused_age ~ '^[1-100]'));

