===========================================================================
OFFICER

CREATE TABLE public.OFFICER (officer_id char(6) CHECK(officer_id LIKE 'OF____'), officer_name varchar(30),officer_rank int, CONSTRAINT officer_pk PRIMARY KEY (officer_id));

INSERT INTO public.officer
(officer_id, officer_name, officer_rank)
