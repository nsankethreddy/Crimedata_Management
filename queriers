PETITIONER FIR

create table public.petitioner_fir(petitioner_name varchar(20),adhar numeric(15),contact numeric(10),gender char(1) check(gender='M' OR gender='F'),fir_id numeric(4),constraint petifir_pk primary key (petitioner_name,fir_id),constraint petifir_fk foreign key(fir_id) references fir(fir_id));

